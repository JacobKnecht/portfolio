extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | This portfolio will allow you to view some of my personal projects and showcases
        | some of my development skills. Additionally, it will allow you to view some of the
        | interests that I have.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each val, index in projects
        .cell
          a(href=`/projects/${index}`)
            img.thumbnail(src=val.image_urls[0])
            h5= val.project_name
